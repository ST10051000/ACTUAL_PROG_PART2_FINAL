@page
@model FinalAECApp.Views.Product.CreateModel
@{
    ViewData["Title"] = "Add a new product";
}

<h3>@ViewData["Title"]</h3>
<hr />

<div class="row shadow">
    <div class="col-md-4">
        <form id="addProductForm" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Products.Name" class="form-control" aria-required="true" placeholder="name" />
                <label asp-for="Products.Name">Name</label>
                <span asp-validation-for="Products.Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Products.Category" class="form-control" aria-required="true" placeholder="surname" />
                <label asp-for="Products.Category">Category</label>
                <span asp-validation-for="Products.Category" class="text-danger"></span>
            </div>
            <label asp-for="Products.ProductionDate"> Production Date</label>
            <div class="form-floating mb-3">
                <input asp-for="Products.ProductionDate" type="date" class="form-control" />
                <span asp-validation-for="Products.ProductionDate" class="text-danger"></span>
            </div>

            <button id="btnAddProduct" type="submit" class="w-100 btn btn-lg btn-primary">Add</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

